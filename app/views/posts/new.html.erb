<h1> Create a New Post! </h1>

<% if @post.errors.any? %>
    <% @post.errors.full_messages.each do |error|  %>
        <%= error %>
        <br>
    <% end %>
<% end %>

<%= form_for @post do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title %><br>

  <%= f.label :content %><br>
  <%= f.text_area :content %><br>

  <%= f.collection_select(:blogger_id, Blogger.all, :id, :name)%>
  <%= f.collection_select(:destination_id, Destination.all, :id, :name)%>

  <%= f.submit "Create Post" %>
<% end %>
